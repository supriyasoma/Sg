it('should call saveReferentialInformation with correct URL and headers', () => {
  const dummyResponse = 'success';
  const referentialInfo: ReferentialInfo = { referentialId: 'test-id', name: 'Test' };
  const mockUrl = 'http://mockurl.com/api/v1/referentials/informations';

  // Mock environment to use a different URL for testing
  environment.serviceBaseUrl = 'http://mockurl.com';

  service.saveReferentialInformation(referentialInfo).subscribe((response) => {
    expect(response.body).toEqual(dummyResponse);
  });

  const req = httpMock.expectOne(mockUrl);
  expect(req.request.method).toBe('POST');
  expect(req.request.headers.get('Accept')).toBe('application/json; charset=utf-8');
  req.flush(dummyResponse);
});
