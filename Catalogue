it('should handle error during sendDataToLucid', () => {
  // Arrange (setup mocks and spies)
  const mockErrorResponse = new Error('Failed to send data to Lucid');
  mockuploadService.sendDataToLucid.and.returnValue(throwError(mockErrorResponse));

  // Act (call the function)
  component.pushToLucid();

  // Assert (verify behavior)
  expect(component.alertValue.class).toBe('alert alert-danger');
  expect(component.showSpinner).toBe(false);
  expect(component.isPushed.emit).toHaveBeenCalledWith(false);
  expect(console.error).toHaveBeenCalledWith(mockErrorResponse); // optional assertion for logging
});
