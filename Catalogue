it('should set columnDefs on init', () => {
  const referentialId = 'valid-id';
  const columnDef = { id: referentialId, colDef: 'column-definition' };
  spyOn(referentials, 'referentialsColDef').and.returnValue([columnDef]);
  component.referentialId = referentialId;
  component.ngOnInit();
  expect(component.columnDefs).toEqual(getColDefByReferentialId(referentialId));
});
