spyOn(component, 'sendDatasetFileForVerification').and.callThrough();

    // Create a dummy file
    const file = new File(['dummy content'], 'dummy-file.txt', { type: 'text/plain' });

    // Simulate file input event
    const event = {
      target: {
        files: [file],
        value: 'C:\\fakepath\\dummy-file.txt'
      }
    } as unknown as Event;

    component.setSelectedFile(event);

    // Verify the spinner is shown
    expect(component.showSpinner).toBeTrue();

    // Verify the selected file is set correctly
    expect(component.selectedFile.fileName).toBe('dummy-file.txt');
    expect(component.selectedFile.checkResult.checkCode).toBe(CHECK_CODE.UNCHECKED);

    // Verify the form is patched with the selected file
    expect(component.uploadForm.get('selectedFileLocation')!.value).toBe(file);

    // Verify sendDatasetFileForVerification is called
    expect(component.sendDatasetFileForVerification).toHaveBeenCalled();
  
